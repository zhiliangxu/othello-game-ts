{
  "name": "othello-game-ts",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 5173",
    "test": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.2",
    "@vitest/coverage-v8": "^2.1.9",
    "jsdom": "^25.0.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "vitest": "^2.0.5"
  },
  "vitest": {
    "environment": "node",
    "include": [
      "src/**/*.{test,spec}.ts"
    ],
    "coverage": {
      "provider": "v8",
      "reportsDirectory": "./coverage",
      "reporter": [
        "text",
        "html"
      ]
    }
  }
}
